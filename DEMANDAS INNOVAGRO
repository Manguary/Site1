    <script>
        const allTabs = ['dashboard', 'tabela'];
        let statusChartInstance = null;

        // Função principal para trocar as abas
        function showTab(tabId) {
            allTabs.forEach(id => {
                document.getElementById(`tab-${id}`).classList.add('hidden');
                document.getElementById(`btn-${id}`).classList.remove('active', 'text-green-800', 'border-green-800');
                document.getElementById(`btn-${id}`).classList.add('text-gray-600', 'border-transparent');
            });
            
            document.getElementById(`tab-${tabId}`).classList.remove('hidden');
            document.getElementById(`btn-${tabId}`).classList.add('active', 'text-green-800', 'border-green-800');
            document.getElementById(`btn-${tabId}`).classList.remove('text-gray-600', 'border-transparent');

            // Renderiza o conteúdo específico da aba clicada
            if (tabId === 'dashboard') {
                renderStatusChart();
            } else if (tabId === 'tabela') {
                renderDemandasTable();
            }
        }

        // Função para renderizar o gráfico de Status
        function renderStatusChart() {
            // Estes dados vieram da análise da sua planilha (coluna 'Posição')
            const chartData = {
                "labels": [
                    "ag. Retorno esp. Empresarial",
                    "Ag. Mais informações",
                    "Finalizado",
                    "ag. Retorno esp. Trabalhista",
                    "*(aguardar resultado Notificação)"
                ],
                "data": [3, 3, 2, 1, 1]
            };

            if (statusChartInstance) {
                statusChartInstance.destroy();
            }
            
            const ctx = document.getElementById('statusChart').getContext('2d');
            statusChartInstance = new Chart(ctx, {
                type: 'doughnut', // Gráfico de Rosca, mais moderno
                data: {
                    labels: chartData.labels,
                    datasets: [{
                        label: 'Nº de Demandas',
                        data: chartData.data,
                        backgroundColor: [
                            'rgba(202, 138, 4, 0.7)',  // yellow-600
                            'rgba(234, 179, 8, 0.7)',  // yellow-500
                            'rgba(107, 114, 128, 0.7)', // gray-500 (Finalizado)
                            'rgba(217, 119, 6, 0.7)',  // amber-600
                            'rgba(245, 158, 11, 0.7)'  // amber-500
                        ],
                        borderColor: [
                            '#CA8A04',
                            '#EAB308',
                            '#6B7280',
                            '#D97706',
                            '#F59E0B'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'top' },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return `${context.label}: ${context.parsed}`;
                                }
                            }
                        }
                    }
                }
            });
        }

        // Função para carregar o JSON e construir a tabela HTML
        async function renderDemandasTable() {
            const container = document.getElementById('tabela-container');
            container.innerHTML = '<p class="text-center text-gray-500">Carregando dados da planilha...</p>';

            try {
                // Esta é a parte interativa: busca o arquivo de dados
                const response = await fetch('demandas_innovagro.json');
                if (!response.ok) {
                    throw new Error('Falha ao carregar o arquivo de dados. Verifique se o "demandas_innovagro.json" foi enviado para o GitHub.');
                }
                const data = await response.json();

                if (data.length === 0) {
                    container.innerHTML = '<p class="text-center text-red-500">Nenhum dado encontrado.</p>';
                    return;
                }

                // Cria o cabeçalho da tabela (pega as chaves do primeiro objeto)
                const headers = Object.keys(data[0]);
                let tableHtml = '<table class="demandas-table">';
                
                // Cabeçalho
                tableHtml += '<thead><tr>';
                headers.forEach(header => {
                    tableHtml += `<th>${header}</th>`;
                });
                tableHtml += '</tr></thead>';

                // Corpo da Tabela
                tableHtml += '<tbody>';
                data.forEach(item => {
                    tableHtml += '<tr>';
                    headers.forEach(header => {
                        // Formata datas para ficar mais legível
                        let value = item[header];
                        if (header === 'Entrega' || header === 'dia') {
                            value = value ? new Date(value).toLocaleDateString('pt-BR') : '---';
                        }
                        tableHtml += `<td>${value}</td>`;
                    });
                    tableHtml += '</tr>';
                });
                tableHtml += '</tbody></table>';

                container.innerHTML = tableHtml;

            } catch (error) {
                console.error('Erro ao renderizar tabela:', error);
                container.innerHTML = `<p class="text-center text-red-600"><b>Erro:</b> ${error.message}</p>`;
            }
        }
        
        // Garante que a primeira aba (Dashboard) seja exibida ao carregar
        document.addEventListener('DOMContentLoaded', () => {
            showTab('dashboard');
        });
    </script>

</body>
</html>
